<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.weiglewilczek.coop.client.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.weiglewilczek.coop.client.ui.Perspective"
            id="com.weiglewilczek.coop.client.ui.Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="com.weiglewilczek.coop.client.ui.View"
            id="com.weiglewilczek.coop.client.ui.View"
            name="Coop"
            restorable="true">
      </view>
   </extension>
   <extension
         id="coop"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.weiglewilczek.coop.client.application"
            name="CooP">
         <property
               name="appName"
               value="CooP">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.weiglewilczek.coop.client.ui.preferences.OpenPreferences"
            commandId="com.weiglewilczek.coop.client.ui.commands.preferences">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="com.weiglewilczek.coop.client.ui.maintoolbar">
            <command
                  commandId="com.weiglewilczek.coop.client.ui.commands.preferences"
                  icon="icons/preferences.gif"
                  style="push"
                  tooltip="Open Preferences">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.weiglewilczek.coop.client.ui.commands.preferences"
            name="OpenPreferences">
      </command>
   </extension>

</plugin>
