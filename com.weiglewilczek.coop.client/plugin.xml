<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.weiglewilczek.coop.client.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.weiglewilczek.coop.client.ui.Perspective"
            id="com.weiglewilczek.coop.client.ui.Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="com.weiglewilczek.coop.client.ui.View"
            id="com.weiglewilczek.coop.client.ui.View"
            name="Coop"
            restorable="true">
      </view>
   </extension>
   <extension
         id="coop"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.weiglewilczek.coop.client.application"
            name="CooP">
         <property
               name="appName"
               value="CooP">
         </property>
      </product>
   </extension>

</plugin>
